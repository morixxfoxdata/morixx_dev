---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import TagList from './TagList.astro';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<li class="border-b border-gray-100 dark:border-gray-800 pb-4">
  <article>
    <a href={`/blog/${post.id}`} class="block group">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {post.data.title}
      </h3>
    </a>
    <p class="text-gray-600 dark:text-gray-300 mt-1">{post.data.description}</p>
    <div class="flex items-center gap-4 mt-2 text-sm text-gray-500 dark:text-gray-400">
      <FormattedDate date={post.data.pubDate} />
    </div>
    {post.data.tags.length > 0 && (
      <div class="mt-2">
        <TagList tags={post.data.tags} />
      </div>
    )}
  </article>
</li>
